extends layout

block content
    h1= title 
    include errors
    if(message)
        h1= message
    form(action="/books/new" method="post")
        p
            label(for='title') Title
            input#title(name='title', type='text' value=bookEntry.title)
        p
            label(for='author') Author
            input#author(name='author', type='text' value=bookEntry.author)
        p
            label(for='genre') Genre
            input#genre(name='genre', type='text' value=bookEntry.genre)
        p
            label(for='year') Year
            input#year(name='year', type='text' value=bookEntry.year)
        p
            input(type='submit', value='Create New Book')
        p
            a.button(href='/') Cancel